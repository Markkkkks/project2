<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/id_deletename"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/id_deleteTel"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/id_deleteTel"
        android:layout_marginBottom="77dp"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/id_deletename"
        android:layout_alignStart="@+id/id_deletename" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/button1"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/id_deleteTel"
        android:layout_alignStart="@+id/id_deleteTel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button1"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Do you want to delete your friend?"
        android:id="@+id/textView"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/id_deletename"
        android:layout_centerHorizontal="true" />
</RelativeLayout>